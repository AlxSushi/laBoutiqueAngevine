{% extends 'base.html.twig' %}

{% block title %}La boutique Fran√ßaise - {{ product.name }} {% endblock %}

{% block content %}


    <div class="row">
        <div class="col-md-5">
            <img src="/assets/img/{{ product.picture }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <span class="product-price font-weight-bold">{{ (product.price / 100)|number_format(2) }} EUR</span>
            <hr>
            <h5>{{ product.subtitle }}</h5>
            <p>{{ product.description }}</p>
            <hr>
            <a href="#" class="btn btn-primary">Ajouter au panier</a>
        </div>

    </div>
{% endblock %}