{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block content %}
<h1>Nos produits</h1>

<div class="row">
    {% for product in products %}
    <div class="col-md-4">
        <div class="product-item text-center">
            <img src="/'assets/img/{{ product.picture }}" alt="{{ product.name }}" class="img-fluid">
            <h6>{{ product.name }}</h6>
            <span>{{ product.subtitle }}</span>
            <span>{{ product.price }}</span>
        </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}

